{
  "name": "repo-stargazer",
  "version": "0.0.1",
  "description": "A backend service that fetches GitHub repositories and assigns them a popularity score based on stars, forks, and update recency.",
  "author": "Mahdi Rashidi <m8rashidi@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:MRdevX/repo-stargazer.git"
  },
  "scripts": {
    "build": "nest build",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "release": "npx standard-version",
    "prepare": "husky",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "migration:generate": "npm run typeorm migration:generate ./src/migrations/$npm_config_name --timestamp",
    "migration:run": "npm run typeorm -- migration:run",
    "migration:revert": "npm run typeorm -- migration:revert",
    "lint-staged": "lint-staged"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/typeorm": "^11.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^17.2.2",
    "helmet": "^8.0.0",
    "ioredis": "^5.8.0",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.27"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@faker-js/faker": "^10.0.0",
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "^11.0.7",
    "@nestjs/testing": "^11.1.6",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@types/pg": "^8.11.10",
    "@types/supertest": "^6.0.2",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "jest-mock-extended": "^4.0.0-beta1",
    "lint-staged": "^16.2.0",
    "pinst": "^3.0.0",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.2"
  },
  "lint-staged": {
    "*.{ts,js,json}": [
      "biome check --write"
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "@root/(.*)": "<rootDir>/$1",
      "@test/(.*)": "<rootDir>/../test/$1"
    },
    "moduleFileExtensions": [
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "coverageReporters": [
      "lcov",
      "cobertura",
      "text"
    ],
    "testEnvironment": "node"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "packageManager": "pnpm@10.17.1+sha512.17c560fca4867ae9473a3899ad84a88334914f379be46d455cbf92e5cf4b39d34985d452d2583baf19967fa76cb5c17bc9e245529d0b98745721aa7200ecaf7a"
}
